---
import type { Page, GetStaticPaths } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import PostPreview from "@/components/PostPreview";
import Pagination from "@/components/Paginator";
import { sortPostsByDate } from "@/utils/helpers";
import RootLayout from "@/layouts/RootLayout";
import type { siteMeta } from "src/types";

export const getStaticPaths = (async ({ paginate }) => {
	const allPosts = await getCollection("post");
	const allPostsByDate = sortPostsByDate(allPosts);
	return paginate(allPostsByDate, { pageSize: 10 });
}) satisfies GetStaticPaths;

interface Props {
	page: Page<CollectionEntry<"post">>;
	uniqueTags: string[];
}

const { page } = Astro.props;

const meta: siteMeta = {
	title: "Posts",
	description: "A list of blog post by me",
	ogImage: null
};

const paginationProps = {
	...(page.url.prev && {
		prevUrl: {
			url: page.url.prev,
			text: `← Previous Posts`,
		},
	}),
	...(page.url.next && {
		nextUrl: {
			url: page.url.next,
			text: `Next Posts →`,
		},
	}),
};
---

<RootLayout meta={meta}>
	<h1 class="title mb-6">Posts</h1>
	<div class="grid gap-y-16 sm:grid-cols-[3fr_1fr] sm:gap-x-8">
		<section aria-label="Blog post list">
			<ul class="space-y-8 text-start">
				{
					page.data.map((p) => (
						<li class="flex flex-col flex-wrap gap-2 sm:flex-row [&_q]:basis-full">
							<PostPreview post={p} withDesc />
						</li>
					))
				}
			</ul>
			<Pagination {...paginationProps} />
		</section>
		
	</div>
</RootLayout>